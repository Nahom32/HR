@model List<EducationalField>
@{
    ViewData["title"] = "Available Fields";
}
@if (Model.Count > 0)
{
    <table class="table bg-white">
        <tr>
            <th>Educational Field Name</th>
            <th>Actions</th>
        </tr>
        @foreach (var educationalField in Model)
        {
            <tr>
                <td class="align-middle">
                    @educationalField.Name
                </td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-action="EditEducationalField" asp-route-Id="@educationalField.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                    <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a> |
                    <a class="btn btn-danger text-white" asp-action="DeleteEducationalField" asp-route-Id="@educationalField.Id"><i class="bi bi-trash"></i>Delete</a>
                </td>

            </tr>

        }
        <a class="btn btn-primary" asp-action="AddEducationalField">Add an Educational Field</a>
    </table>
}
else
{
    <h4 class="text-danger align-content-center">No Educational Field Given</h4>
    <a class="btn btn-primary" asp-action="AddEducationalField">Add an Educational Field</a>

}

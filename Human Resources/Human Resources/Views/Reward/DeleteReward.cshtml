@using Human_Resources.Data.Enum
@using Human_Resources.Data.ViewModels
@model RewardViewModel
@{
    ViewData["Title"] = "Delete Reward";
}
<div class="container mt-3">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>@ViewData["Title"]</h1>
            <form method="post" asp-action="DeleteReward">
                <input  asp-for="Id" hidden/>
                <div class="form-group mb-3">
                    <label asp-for="EmployeeId" class="control-label"></label>
                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees" disabled></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Reason" class="form-label"></label>
                    <input asp-for="Reason" class="form-control" disabled />
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" disabled>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" class="btn btn-primary" value="Remove Reward">
                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>


@model List<Employee>
@{
    ViewData["title"] = "Available Departments";
}
@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>Employee Name</th>
            <th>Employee Department</th>
            <th>Employee Position</th>
        </tr>
        @foreach (var emp in Model)
        {
            <tr>
                <td class="align-middle">
                    @emp.Name
                </td>
                <td class="align-middle">
                    @emp.Department.DepartmentName
                </td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-action="EditDepartment" asp-route-Id="@emp.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                    <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a> |
                    <a class="btn btn-danger text-white" asp-action="DeleteDepartment" asp-route-Id="@emp.Id"><i class="bi bi-trash"></i>Delete</a>
                </td>

            </tr>

        }
        <a class="btn btn-primary" asp-action="AddDepartment">Add a department</a>
    </table>
}
else
{
    <h4 class="text-danger align-content-center">No Employees available</h4>
    <a class="btn btn-primary" asp-action="AddDepartment">Add a department</a>

}

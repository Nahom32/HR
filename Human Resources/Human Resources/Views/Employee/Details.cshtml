@model Employee
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card my-3">
    <div style="width: 300px;" class="px-3  mt-3">
        <img decoding="async" src="@("/../../images/"+Model.PhotoURL.Trim())" alt="@Model.Name" class="img-fluid img-circle">
    </div>
    <div class="box-title bg-primary text-light px-3">
        <h3>@Model.Name</h3>
    </div>
    <div class="box-title px-3">
        <h5 class="font-weight-bold">@Model.Department.DepartmentName</h5>
    </div>
    
    <div class="px-3">
        <p class="font-weight-bold">@Model.EducationalField.Name</p>
    </div>
    <div class="px-3">
        <p class="font-weight-bold">@Model.EducationalLevel</p>
    </div>
    <div class="px-3">
        <p class="font-weight-bold">@Model.Position.PositionSalary</p>
    </div>
    <div class="px-3">
        <p class="font-weight-bold">@Model.MaritalStatus</p>
    </div>

</div>
@model List<Department> 
@{
    ViewData["title"] = "Available Departments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if(Model.Count > 0)
{
    <table class="table bg-white">
    <tr>
    <th>Department Name</th>
    <th>Department Description</th>
    <th>Actions</th>
    </tr>
    @foreach(var dept in Model)
    {
       <tr>
            <td class="align-middle">
                @dept.DepartmentName
            </td>
            <td class="align-middle">
                @dept.DepartmentDescription
            </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="EditDepartment" asp-route-Id ="@dept.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a> |
                    <a class="btn btn-danger text-white" asp-action="DeleteDepartment" asp-route-Id="@dept.Id"><i class="bi bi-trash"></i>Delete</a>
            </td>

        </tr>

    }
        <a class="btn btn-primary" asp-action="AddDepartment">Add a department</a>
    </table>
}else
{
    <h4 class="text-danger align-content-center">No Departments Given</h4>
    <a class="btn btn-primary" asp-action="AddDepartment">Add a department</a>

}

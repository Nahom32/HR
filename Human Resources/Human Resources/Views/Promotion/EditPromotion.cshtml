@using Human_Resources.Data.Enum
@using Human_Resources.Data.ViewModels
@model PromotionViewModel
@{
    ViewData["Title"] = "Promotion Form";
}
<div class="container mt-3">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>@ViewData["Title"]</h1>
            <div class="form-group text-center">
                <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
            </div>
            <form method="post" asp-action="EditPromotion">
                <div class="form-group mb-3">
                    <label asp-for="EmployeeId" class="control-label"></label>
                    <input asp-for="EmployeeId" class="form-control" hidden/>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reason" class="form-label"></label>
                    <input asp-for="Reason" class="form-control" />
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PositionChange" class="control-label"></label>
                    <select asp-for="PositionChange" class="form-control" asp-items="Html.GetEnumSelectList<PositionChange>()">
                    </select>
                    <span asp-validation-for="PositionChange" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="fromPositionId" class="control-label"></label>
                    <select asp-for="fromPositionId" class="form-control" asp-items="ViewBag.PositionFrom" disabled></select>
                    <span asp-validation-for="fromPositionId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="toPositionId" class="control-label"></label>
                    <select asp-for="toPositionId" class="form-control " asp-items="ViewBag.PositionTo"></select>
                    <span asp-validation-for="toPositionId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" class="btn btn-primary" value="Promote Employee">
                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
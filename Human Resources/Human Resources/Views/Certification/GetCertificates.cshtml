@model List<Certification>
@using Human_Resources.Models;

@if(Model !=null && Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Certification</th>
            </tr>
            <tr>
                <th>Options</th>
            </tr>
        </thead>
    @foreach(var cert in Model)
    {
        <tr>
            <td>@cert.CertificationName+(@cert.CertifyingCompany)</td>
        </tr>
        <tr>
            <td></td>
        </tr>
        
    }
    </table>
}
else
{
    <h3 class="text text-danger">You donot have any certificates</h3>
    
}
<a class="btn btn-info" asp-controller="Certification" asp-action="AddCertification">Add Certificate</a>
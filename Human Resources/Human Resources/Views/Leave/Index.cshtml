@model List<Leave>
@using Human_Resources.Data.ViewModels
@{
    ViewData["title"] = "Available Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Count > 0)
{
    <table class="table bg-white">
        <tr>
            <th style="padding-left: 30px;">Employee Name</th>
            <th style="padding-left: 30px;">Remark</th>
            <th style="padding-left: 30px;">Actions</th>
        </tr>
        @foreach (var leave in Model)
        {
            <tr>
                <td class="align-middle" style="padding-left: 30px;">
                    @leave.Employee.Name
                </td>
                <td class="align-middle" style="padding-left: 30px;">
                    @leave.Remark
                </td>
                <td class="align-middle" style="padding-left: 30px;">
                    <a class="btn btn-outline-primary" asp-action="AcceptLeave" asp-route-Id="@leave.Employee.Id"><i class="bi bi-pencil-square"></i>Accept</a>|
                    <a class="btn btn-outline-info" asp-route-Id="@leave.Id" asp-action="Details"><i class="bi bi-eye"></i>Details</a> |
                    <a class="btn btn-danger text-white" asp-action="RejectedLeave" asp-route-Id="@leave.Employee.Id"><i class="bi bi-trash"></i>Reject</a>
                </td>
            </tr>
        }
        <a class="btn btn-primary" asp-action="RequestLeave">Request a Leave</a>
    </table>
}
else
{
    <h4 class="text-danger align-content-center">No Request till now</h4>
    <a asp-action="RequestLeave" class="btn btn-primary">Request a Leave</a>
}
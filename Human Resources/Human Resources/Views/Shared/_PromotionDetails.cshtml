@model Promotion
@{
    ViewData["Title"] = "Detail Page";
}

<div class="modal fade" id="PromoDetail-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@ViewData["Title"]</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
                <div class="modal-body">

                    <div class="form-group">
                        <input asp-for="Id" hidden />
                        Employee Name: @Model.Employee?.Name
                    </div>

                    <div class="form-group mb-3">
                        Previous Position : @Model.PositionFrom?.PositionName
                    </div>
                    <div class="form-group mb-3">
                        Current Position : @Model.PositionTo?.PositionName
                    </div>

                </div>
                <div class="modal-footer">
               
                </div>
          
        </div>
    </div>
</div>
@model LeaveTypes
@{
    ViewData["Title"] = "Add a Leave Type";
}

<div class="modal fade" id="CreateType" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@ViewData["Title"]</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="create-dept-form" method="post" asp-controller="LeaveTypes" asp-action="AddLeaveType">
            <div class="modal-body">
                
                    <div class="form-group">
                        <label asp-for="LeaveName" class="form-label"></label>
                        <input asp-for="LeaveName" class="form-control" data-bv-notempty="true" data-bv-notempty-message="The days field is required" />
                        <span asp-validation-for="LeaveName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Days" class="form-label"></label>
                        <input asp-for="Days" class="form-control form-control-lg" data-bv-notempty="true" data-bv-notempty-message="The days field is required">
                        <span asp-validation-for="Days" class="text-danger"></span>
                    </div>  
            </div>
            <div class="modal-footer">
                <a  asp-action="Index" class="btn btn-secondary" data-bs-dismiss="modal">Close</a>
                <input type="submit" class="btn btn-primary" value="Create"> 
            </div>
             </form>
        </div>
    </div>
</div>

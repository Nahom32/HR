@{
    ViewData["Title"] = "Information Form";
}

<div id="LoginData" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@ViewData["Title"]</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            
                <div class="modal-body">
                    <div class="form-group mb-3">
                        User Name: @TempData["username"]
                    </div>
                    <div class="form-group mb-3">
                        Password: @TempData["password"]
                    </div>
                  
                </div>
                <div class="modal-footer">
                    <a  asp-action="Index" asp-controller="Employee" class="btn btn-primary">Ok</a>
                </div>
        </div>
    </div>
</div>